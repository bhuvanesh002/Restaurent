<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/card_menu"
        android:layout_width="fill_parent"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:layout_marginTop="3dp">
        <View
            android:id="@+id/views"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/card_menu"
            android:background="@color/lightgrey" />
        <Button
            android:id="@+id/button_addmenu"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/rounded_corner"
            android:text="add"
            android:textColor="@color/red"
            android:textSize="18dp"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/relative_numpick"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/rounded_corner"
            android:orientation="vertical"
            android:visibility="visible">

            <Button
                android:id="@+id/button_subtract"
                android:layout_width="35dp"
                android:layout_height="34dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/shape_button"
                android:text="-"
                android:textColor="@color/red"
                android:textSize="25dp" />

            <RelativeLayout
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_marginLeft="38dp"
                android:background="@color/red">

                <TextView
                    android:id="@+id/text_counts"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="24dp" />
            </RelativeLayout>

            <Button
                android:id="@+id/button_add"
                android:layout_width="35dp"
                android:layout_height="34dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="73dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/shape_button"
                android:text="+"
                android:textColor="@color/red"
                android:textSize="25dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView_menutitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="New Text"
            android:textColor="@color/red"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_menuprice"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:text="New Text"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView_menudesc"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/card_menu"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="80dp"
            android:text="New Text"
            android:textColor="@color/darkgrey"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textView_customize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/card_menu"
            android:layout_alignParentStart="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:text="customization available"
            android:textColor="@color/red"
            android:textSize="20dp"
            android:visibility="gone" />
    </android.support.v7.widget.CardView>


</LinearLayout>