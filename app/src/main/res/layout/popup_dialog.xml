<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_customize"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:background="@color/white"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView_custmenuname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="New Text"
        android:textColor="@color/red"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView_custmenudesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView_custmenuname"
        android:layout_below="@+id/textView_custmenuname"
        android:layout_marginTop="10dp"
        android:text="New Text"
        android:textColor="@color/darkgrey"
        android:textSize="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textView_custmenudesc"
        android:layout_marginTop="40dp"
        android:background="@color/grey" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_addons"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/textView_custmenudesc"
        android:layout_marginTop="50dp"
        android:background="@color/white"
        android:scrollbars="vertical"


        >

    </android.support.v7.widget.RecyclerView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/recycler_addons"
        android:layout_marginTop="1dp"
        android:background="@color/grey" />

    <TextView
        android:id="@+id/textView_totalpop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:text="Total:"
        android:textSize="19dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/button_cancelcust"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@color/darkred"
            android:text="cancel"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <Button
            android:id="@+id/button_addcartcust"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@color/red"
            android:text="add to cart"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView_custmenuprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView_custmenudesc"
        android:layout_below="@+id/textView_custmenudesc"
        android:layout_marginTop="10dp"
        android:text="New Text" />

    <TextView
        android:id="@+id/textView_custtotprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="30dp"
        android:text="New Text"
        android:textSize="19dp" />

</RelativeLayout>